<!DOCTYPE html>
<html>
    <head>
        <title>{{siteName}}</title>
        <meta name="robots" content="noindex" />
        {{>commonHead}}
    </head>
    <body>
        <div class="main-content">
            {{>header}}
            {{>errorModal}}
            <div class="modal fade" id="password-modal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="password-modal-title">
                <div class="modal-dialog">
                    <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="password-modal-title">Password</h1>
                    </div>
                    <div class="modal-body" id="password-modal-body">
                        <div id="auth-area">
                            <form id="auth-form">
                                <p>Please enter the password to view this draft.</p>
                                {{>passwordEntry}}
                            </form>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <input type="submit" class="btn btn-secondary" form="auth-form" value="Submit" data-bs-dismiss="modal" />
                    </div>
                    </div>
                </div>
            </div>
            
            {{>draftViewerWithLoading}}
        </div>        
        {{>footer}}

        {{>commonScripts}}
        <script src="/js/draft-loader.js"></script>
        <script src="/js/private-viewer.js"></script>
        <script src="/js/password-visibility.js"></script>
    </body>
</html>